{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "incremental": false,
    "paths": {
      "three-shader-baker": ["../package/src/index.ts"],
      "three-shader-baker/react": ["../package/src/React/index.tsx"]
    }
  },
  "include": ["src"]
}
